{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "target": "ES2017",
        "jsx": "react",
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "typeRoots": [
            "typings/**/*.d.ts",
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "webpack",
        "webpack/**/*.config.ts",
        "webpack/**/*.ts",
        "server",
        "typings/**/*.d.ts",
        "./node_modules/@types",
        "tests/**/*.test.js",
        "tests/**/*.test.ts"
    ]
}
